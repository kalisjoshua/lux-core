{
  "name": "@luxui/core",
  "version": "0.1.0",
  "description": "Admin UI as a Siren hypermedia client.",
  "main": "lux.js",
  "scripts": {
    "install": "rollup -c",
    "preinstall": "cp -f .babelrc-build .babelrc",
    "test": "jest --watch",
    "pretest": "cp -f .babelrc-test .babelrc",
    "test:cover": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/luxui/core.git"
  },
  "keywords": [
    "hypermedia",
    "javascript",
    "js",
    "reactjs",
    "siren",
    "client"
  ],
  "author": "Joshua T Kalis <JoshKalis@QickenLoans.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luxui/core/issues"
  },
  "homepage": "https://github.com/luxui/core#readme",
  "devDependencies": {
    "babel-jest": "^17.0.0",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "jest": "^17.0.0",
    "jest-cli": "^16.0.2",
    "react-test-renderer": "^15.3.2"
  },
  "dependencies": {
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-json": "^2.0.2"
  },
  "peerDependencies": {
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
