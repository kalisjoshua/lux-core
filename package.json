{
  "name": "@luxui/core-lux",
  "version": "0.3.0",
  "description": "Admin UI as a Siren hypermedia client.",
  "main": "dist/index.js",
  "files": [
    "dist/index.js"
  ],
  "scripts": {
    "bundle": "export NODE_ENV=production && rollup -c rollup.js",
    "prebundle": "rm -rf ./dist/*",
    "compile": "babel ./index.js",
    "doc": "jsdoc -c ./jsdoc.json",
    "predoc": "rm -rf ./docs/*",
    "test": "jest --watch",
    "test:cover": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luxui/core-lux.git"
  },
  "keywords": [
    "hypermedia",
    "javascript",
    "js",
    "siren",
    "client"
  ],
  "author": "Joshua T Kalis <JoshKalis@QickenLoans.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luxui/core-lux/issues"
  },
  "homepage": "https://github.com/luxui/core-lux#readme",
  "devDependencies": {
    "jest": "^17.0.3",
    "jest-fetch-mock": "^1.0.6",
    "jsdoc": "^3.4.3"
  },
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-stage-3": "^6.17.0",
    "eslint": "^3.12.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "rollup": "^0.36.4",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-json": "^2.0.2",
    "rollup-plugin-node-builtins": "^2.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "whatwg-fetch": "^2.0.1"
  },
  "jest": {
    "automock": false,
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFiles": [
      "./jest.js"
    ]
  }
}
