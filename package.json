{
  "name": "@luxui/lux",
  "version": "0.7.0",
  "description": "A client-side, in-browser single-page application, UI for Siren hypermedia APIs.",
  "main": "dist/reactLux.js",
  "files": [
    "dist/*.js",
    "README.md",
    "SIREN+LUX.md"
  ],
  "scripts": {
    "build": "export NODE_ENV=production && npm run build:react",
    "prebuild": "rm -rf ./dist/*",
    "build:react": "export LUX_FRAMEWORK=react && rollup -c rollup.js",
    "doc": "jsdoc -c ./jsdoc.json",
    "predoc": "rm -rf ./docs/*",
    "lint": "eslint src/",
    "doc-pub": "git subtree push --prefix=docs upstream gh-pages",
    "predoc-pub": "npm run doc",
    "start": "jest --watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luxui/lux.git"
  },
  "keywords": [
    "hypermedia",
    "javascript",
    "js",
    "siren",
    "client",
    "react",
    "reactjs"
  ],
  "author": "Joshua T Kalis <JoshKalis@QickenLoans.com>",
  "contributors": [],
  "maintainers": [
    "Joshua T Kalis <kalisjoshua@gmail.com.com> (kalisjoshua.me)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luxui/lux/issues"
  },
  "homepage": "https://github.com/luxui/lux#readme",
  "devDependencies": {
    "babel-preset-react": "^6.16.0",
    "jest": "^17.0.3",
    "jest-fetch-mock": "^1.0.6",
    "jsdoc": "^3.4.3",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-test-renderer": "^15.4.1"
  },
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-stage-3": "^6.17.0",
    "eslint": "^3.12.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "rollup": "^0.36.4",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-json": "^2.0.2",
    "rollup-plugin-node-builtins": "^2.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "whatwg-fetch": "^2.0.1"
  },
  "jest": {
    "automock": false,
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFiles": [
      "./jest.js"
    ]
  }
}
